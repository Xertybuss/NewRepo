@model gestion_des_visiteurs.Models.Demande

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/demandeDetails.css" />
}


<div>
    <h4>Details sur la demande</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nom)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            CIN du visiteur
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Visiteur.cin)
        </dd>
        <dt class = "col-sm-2">
            CIN du superviseur
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Superviseur.cin)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Modifier</a> |
    <a asp-action="Index" class="btn btn-secondary">Revenir à la liste</a>
</div>
