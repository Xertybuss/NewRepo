@model gestion_des_visiteurs.Models.Visite

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/visiteDetails.css" />
}


<div>
    <h4>Details sur la visite</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date de visite
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateVisite)
        </dd>
        <dt class = "col-sm-2">
            Heure de début
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.heureDebut)
        </dd>
        <dt class = "col-sm-2">
            Heure de fin
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.heureFin)
        </dd>
        <dt class = "col-sm-2">
            Durée
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.duree)
        </dd>
        <dt class = "col-sm-2">
            ID du visiteur
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idVisiteur)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Modifier</a> |
    <a asp-action="Index" class="btn btn-secondary">Revenir à la liste</a>
</div>
